<h1><%= @task.title %></h1>
<% if @task.completed %>
<span>[X]</span>
<% else %>
<span>[ ]</span>
<% end %>
<p><%= @task.details %></p>


<%= link_to 'Back to list', tasks_path %>
<%= link_to "Edit Task", edit_task_path %>
<%= link_to "Delete Task",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
